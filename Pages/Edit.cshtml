@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit posts";
    if (Model.LoggedUser != null)
    {
        Layout = "_UserLayout";
    }
}
<h1>@ViewData["Title"]</h1>
<h1>Change the values of @Model.Post.Title</h1>
<p>Use this page to edit items of food.</p>
<p style="color:red">@Model.Error</p>

<form method="post">
    Title:
    <br>
    <input asp-for="Post.Title"/>
    <br>
    Text:
    <br>
    <textarea asp-for="Post.Text" rows = "12" cols = "170">
    </textarea>
    <br>
    <br>
    <input type="submit" />
</form>
